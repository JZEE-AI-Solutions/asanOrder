{
  "name": "order-management-backend",
  "version": "1.0.0",
  "description": "Backend for Order Management System",
  "main": "server.js",
  "scripts": {
    "start": "npx prisma migrate deploy && node server.js",
    "dev": "nodemon server.js",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:seed": "node prisma/seed.js",
    "postinstall": "npx prisma generate",
    "test-migrations": "node test-migrations.js",
    "db:reset": "npx prisma migrate reset --force",
    "db:deploy": "npx prisma migrate deploy",
    "clean-production": "node clean-production-db.js"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mssql": "^11.0.1",
    "multer": "^1.4.5-lts.1",
    "openai": "^5.22.1",
    "sqlite3": "^5.1.6",
    "twilio": "^4.17.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "prisma": "^5.4.2"
  }
}
